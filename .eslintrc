{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "react-app",
        "standard",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/boolean-prop-naming": ["error", { "rule": "^(is|has)[A-Z]([A-Za-z0-9]?)+" }]
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "latest"
        }
    }
}
